		$(TARGETLIBS) \
		$(IFSKIT_LIB_PATH)\ntstrsafe.lib

SOURCES= \
	fltsystem.cpp \
	fltstorage.cpp \
	fltfilters.cpp \
	fltevents.cpp \
	fltbox.cpp \
	fltchecks.cpp

RUN_WPP= $(SOURCES) -km -func:DoTraceLevelMessage(LEVEL,FLAGS,MSG,...) -scan:../inc/trace.h